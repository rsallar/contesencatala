<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui" xmlns:o="urn:import:gwt.material.design.addins.client.overlay">
             
  <ui:with field='res' type='cat.contesencatala.client.resources.AppResources'/>
 
 
  <m:MaterialCollectionItem type="CHECKBOX" waves="DEFAULT" ui:field="item" >
   <g:HTMLPanel tag="div"  width="100%">
   <m:MaterialLink  ui:field="title"  fontSize="1.1em" iconType="BOOK" iconColor="blue" iconPosition="LEFT" textColor="black"/>
   <m:MaterialLabel  ui:field="author" fontSize="1em" textColor="grey" />
   </g:HTMLPanel>
   <g:HTMLPanel tag="div" >
   <m:MaterialIcon  iconColor="blue" visible="false" addStyleNames="{res.style.taleStar}" ui:field="favoriteIcon" iconType="FAVORITE"  circle="true" />
    	
	</g:HTMLPanel>
  </m:MaterialCollectionItem>
  
</ui:UiBinder>