<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui' 
        xmlns:m="urn:import:gwt.material.design.client.ui" >
        
 <ui:with field='res' type='cat.contesencatala.client.resources.AppResources'/>
 <ui:with field='texts' type='cat.contesencatala.client.resources.i18n.AppMessages'/>
 
    <g:HTMLPanel>
    
		   <m:MaterialRow>
		    <m:MaterialColumn grid="s12">
		   <m:MaterialCard backgroundColor="white" addStyleNames="{res.style.readerCard}">
		    <m:MaterialCardImage waves="LIGHT">
		     <m:MaterialImage ui:field="image" />
		     <m:MaterialCardTitle text="Contes en catalÃ " fontSize="1.5em" textColor="teal lighten-1"  />
		    </m:MaterialCardImage>
		    <m:MaterialCardContent textColor="black" addStyleNames="{res.style.content}">
		     <m:MaterialLabel text="{texts.home}" />
		    </m:MaterialCardContent>
		    <m:MaterialCardAction backgroundColor="teal lighten-4" >
		     <m:MaterialButton ui:field="tales" text="{texts.start}" addStyleNames="{res.style.homeButton}" />
		     <!-- <m:MaterialButton text="Eliminar publicitat" addStyleNames="{res.style.homeButton}" /> -->
		    </m:MaterialCardAction>
		   </m:MaterialCard>
		  </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>
