<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui' 
        xmlns:m="urn:import:gwt.material.design.client.ui" >
        
 <ui:with field='res' type='cat.contesencatala.client.resources.AppResources'/>
    <g:HTMLPanel>
    
		   <m:MaterialRow>
		    <m:MaterialColumn grid="s12">
		   <m:MaterialCard backgroundColor="white" addStyleNames="{res.style.readerCard}">
		    <m:MaterialCardImage waves="LIGHT">
		     <m:MaterialImage ui:field="image" />
		     <m:MaterialCardTitle text="Contes en català" fontSize="1.5em" textColor="teal lighten-1"  />
		    </m:MaterialCardImage>
		    <m:MaterialCardContent textColor="black" addStyleNames="{res.style.content}">
		     <m:MaterialLabel text="Benvinguts a Contes en català. Un breu recull de contes per explicar en qualsevol lloc, en qualsevol moment i en la nostra llengua. Tots els contes han sigut escrits amb cura, mantenint l'essència dels originals. Esperem incorporar més contes en breu, estigueu atents!" />
		    </m:MaterialCardContent>
		    <m:MaterialCardAction backgroundColor="teal lighten-4" >
		     <m:MaterialButton ui:field="tales" text="Començar!" addStyleNames="{res.style.homeButton}" />
		     <!-- <m:MaterialButton text="Eliminar publicitat" addStyleNames="{res.style.homeButton}" /> -->
		    </m:MaterialCardAction>
		   </m:MaterialCard>
		  </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>
