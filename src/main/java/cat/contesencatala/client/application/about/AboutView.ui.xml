<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:with field='res'
		type='cat.contesencatala.client.resources.AppResources' />
	<ui:with field='texts'
		type='cat.contesencatala.client.resources.i18n.AppMessages' />


	<m:MaterialRow ui:field="container">
		<m:MaterialColumn grid="s12">
			<m:MaterialCard padding="15" backgroundColor="WHITE">

				<m:MaterialLabel fontSize="1.2em" text="Sobre l'aplicació"></m:MaterialLabel>
				<m:MaterialLabel fontSize="1em" text="{texts.about}" />
				<m:MaterialLink text="rsallar@gmail.com" href="mailto:rsallar@gmail.com?Subject=Contes en català" target="_top"/>

			</m:MaterialCard>
		</m:MaterialColumn>

		<m:MaterialColumn grid="s12">
			<m:MaterialCard padding="15">
				<m:MaterialLabel fontSize="1.2em" text="Crèdit per les imatges" />
				<m:MaterialLabel fontSize="1em" text="{texts.credits}" />

				<m:MaterialCollection fontSize="0.7em"
					ui:field="collection" addStyleNames="{res.style.credits}">

				</m:MaterialCollection>

			</m:MaterialCard>

		</m:MaterialColumn>
	</m:MaterialRow>
</ui:UiBinder>