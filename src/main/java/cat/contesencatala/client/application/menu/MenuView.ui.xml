<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">
    <ui:with field='res' type='cat.contesencatala.client.resources.AppResources'/>
    
  
	<m:MaterialHeader ui:field="header">
		<m:MaterialNavBar ui:field="navBar" type="FIXED" backgroundColor="teal lighten-1" activates="mysidenav">
		    <m:MaterialLink ui:field="btnSearch" iconType="SEARCH" iconColor="white" float="RIGHT"/>
			
		</m:MaterialNavBar>
		
		<m:MaterialNavBar ui:field="navBarSearch" type="FIXED" backgroundColor="white" visible="false">
            <m:MaterialSearch ui:field="txtSearch" addStyleNames="{res.style.search}" placeholder="Cerca un conte..." iconColor="black"  active="true" shadow="1"/>
        </m:MaterialNavBar>

		<m:MaterialSideNav ui:field="sideNav" backgroundColor="teal lighten-5" m:id="mysidenav" allowBodyScroll = "true"  type="PUSH" width="300" closeOnClick="true">
			<m:MaterialNavBrand textColor="teal lighten-1">Contes en català</m:MaterialNavBrand>
			<m:MaterialLink href="#home" iconType="HOME" 	iconPosition="LEFT" textColor="teal lighten-1" text="Inici" />
			<m:MaterialLink href="#talelist" iconType="BOOK" 
				iconPosition="LEFT" textColor="teal lighten-1" text="Contes" />
			<m:MaterialLink href="#talelist?favorite=true" 
				iconType="STARS" iconPosition="LEFT" textColor="teal lighten-1" text="Favorits" />
			<m:MaterialLink href="#about" iconType="INFO_OUTLINE" 
				iconPosition="LEFT" textColor="teal lighten-1" text="Sobre l'aplicació" />

		</m:MaterialSideNav>
	</m:MaterialHeader>
</ui:UiBinder>