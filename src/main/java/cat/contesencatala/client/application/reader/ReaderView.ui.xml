<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:o="urn:import:gwt.material.design.addins.client.overlay" xmlns:h="urn:import:gwt.material.design.client.ui.html">

  <ui:with field='res' type='cat.contesencatala.client.resources.AppResources'/>
  
  <m:MaterialRow ui:field="container">
  <m:MaterialColumn  grid="s12" >

		<m:MaterialCard hoverable="false" backgroundColor="white" addStyleNames="{res.style.readerCard}">
	
			<m:MaterialCardImage waves="LIGHT" >
				
				<m:MaterialImage ui:field="image" />
				
				<m:MaterialCardTitle  ui:field="title" addStyleNames="{res.style.cardTitle}" />

			</m:MaterialCardImage>
			<m:MaterialCardContent textColor="black" addStyleNames="{res.style.content}">

				<m:MaterialLabel ui:field="text"/>
				
			</m:MaterialCardContent>
 		<m:MaterialCardAction backgroundColor="teal lighten-4" >
		      <m:MaterialButton  ui:field="back"  text="Tornar" backgroundColor="teal lighten-1" textColor="white" />
		    </m:MaterialCardAction>
		</m:MaterialCard>
		
		

		
	  
  </m:MaterialColumn>

  </m:MaterialRow>		

</ui:UiBinder>